<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login">

    <RelativeLayout
        android:layout_width="430dp"
        android:layout_height="977dp"
        android:background="#e5e5e5"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvWelcomeBack"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Chào mừng lại"
            android:textColor="#000000"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tvPrompt"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvWelcomeBack"
            android:layout_marginTop="49dp"
            android:gravity="center"
            android:text="Xin hãy đăng nhập vào tài khoản của bạn"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_below="@id/tvPrompt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            android:layout_marginTop="49dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Email"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_below="@id/etEmail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Mật khẩu"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="14sp"
            />

        <CheckBox
            android:id="@+id/cbRememberMe"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPassword"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="-6dp"
            android:text="Nhớ tôi"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPassword"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="54dp"
            android:text="Quên mật khẩu"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:text="Đăng nhập"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvNoAccount"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_alignParentStart="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="1dp"
            android:text="Bạn chưa có tài khoản?"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_marginStart="-18dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/tvNoAccount"
            android:text="Đăng ký"
            android:textColor="#6c63ff"
            android:textSize="14sp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>